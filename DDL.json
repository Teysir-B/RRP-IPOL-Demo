{
    "general": {
        "demo_title": "Python Demo Test",
        "requirements": "docker",
        "timeout": 1
    },
    "build": {
        "url": "git@github.com:Helene-Maxcici/IPOL.git",
        "rev": "origin/main",
        "dockerfile": ".ipol/Dockerfile"
    },
    "inputs": [
        {
            "description": "Audio file",
            "max_weight": "100*1024*1024",
            "ext": ".wav",
            "required": true,
            "type": "data"
        }
    ],
    "params": [
        {
            "id": "sigma",
            "label": "input sigma",
            "comments": "Noise standard deviation",
            "type": "range",
            "values": {
                "default": "30",
                "max": 300,
                "min": 0,
                "step": 0.1
            }
        }
    ],
    "results": [
        {
            "contents": ["<h3>Input Audio </h3><audio controls> <source src= '+work_url+'out.wav type='audio/wav'></audio>"],
            "type": "html_text"
        },
        {
            "contents": "stdout.txt",
            "label": "<p>Output</p>",
            "type": "text_file"
        }
    ],
    "archive": {
        "enable_reconstruct": true,
        "info": {
            "run_time": "run time"
        }
    },
    "run": "python $bin/main.py --input $input_0 --sigma $sigma --output out.wav"
}
