{
    "general": {
        "demo_title": "Automatic Speech Recognition via Large-Scale Weak Supervision",
        "requirements": "docker",
        "xlink_article": "https://arxiv.org/pdf/2212.04356.pdf",
        "description": "This demo is runs a method for automatic speech reconition in French, Galician and Persian. The algorithm takes as input an audio file and automatically transcribes it.",
        "timeout": 300
    },
    "build": {
        "url": "git@github.com:Teysir-B/RRP-IPOL-Demo.git",
        "rev": "origin/main",
        "dockerfile": ".ipol/Dockerfile"
    },
    "inputs": [
        {
            "description": "Input audio file",
            "ext": ".wav",
            "type": "data",
            "max_weight": 10000000
        }
    ],
    "params": [
        {
            "default_value": "French",
            "id": "language",
            "label": "Language",
            "type": "selection_radio",
            "values": {
                "French": "0",
                "Galician": "1",
                "Persian": "2"
            }
        }
    ],
    "run": "python3 $bin/main.py --audio $input_ 0.wav --language $language",
    "results": [
        {
            " type " : "text_file",
            " label " : "<h2>Transcription<h2 >",
            " contents " : "stdout.txt"
        }
    ],
    "archive": {
        "files": {
            "input_0.wav": "Uploaded audio file",
            "stdout.txt": "Transcription"
        },
        " enable_reconstruct ": true,
        "params": ["language"],
        " info " : {" run_time ": "run time "}
    }
}
